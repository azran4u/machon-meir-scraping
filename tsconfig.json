{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "strict": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "declaration": true
  },
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
